{
	"name" : "nfouka/lightframework",
    "type": "project",
	"description" : "A Light Framework Builder",
	"keywords" : [
		"php7",
		"framework",
		"symfony"
	],
	"homepage" : "https://github.com/nfouka",
	"license" : "MIT",
	"authors" : [{
			"name" : "Nadir Fouka",
			"email" : "nadir.fouka@gmail.com"
		}
	],
    "description": "A Light Framework Builder",
    "keywords": ["php7", "framework", "symfony"],
    "homepage": "https://github.com/nfouka",
    "license": "MIT",
    "authors": [
        {
            "name": "Nadir Fouka",
            "email": "nadir.fouka@gmail.com"
        }
    ],
	"require-dev" : {
		"phpunit/phpunit" : "^7",
		"symfony/var-dumper" : "^5.1",
		"filp/whoops" : "^2.7"
	},
	"require" : {
		"symfony/http-foundation" : "^5.1",
		"symfony/routing" : "^5.1",
		"symfony/dotenv" : "^5.1",
		"symfony/http-kernel" : "^5.1",
		"symfony/event-dispatcher" : "^5.1",
		"symfony/dependency-injection" : "^5.1"
	},
	"autoload" : {
		"psr-4" : {
			"" : "src/"
		}
	},
    "scripts": {
        "auto-scripts": {
            "server:start": "sh post-install.sh --color=auto"
        },
        "prepare": {
            "start": "php -r 'echo \"-----------------------------------------\n\";'"
        },
	"finish": {
             "server:start": "php cliServer.phar server:start  --addressport=0.0.0.0:8000 --rootdir=web"
        },
        "post-install-cmd": [
            "@prepare",
            "@auto-scripts",
	    "@finish"
        ],
        "post-update-cmd": [
            "@prepare",
            "@auto-scripts",
	    "@finish"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.1.*"
        }
    }
}

